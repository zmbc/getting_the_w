%h1
  =@player.full_name
  %small.text-muted="#{@player.position_friendly}, #{@player.team.full_name}"

%ul.pagination
  %li
    %a{href: "?season=#{@years.first}"} &laquo;
  - @years.select{|x| (x - @season).abs <= 3}.each do |year|
    %li{class: year == @season ? 'active' : ''}
      %a{href: "?season=#{year}"}=year
  %li
    %a{href: "?season=#{@years.last}"} &raquo;
.row
  %ul.nav.nav-tabs
    %li.active
      %a#player-tab{href: "#player", 'data-toggle' => "tab"}Player
    %li
      %a#team-tab{href: "#team", 'data-toggle' => "tab"}Team
    %li
      %a#opposing-team-tab{href: "#opposing-team", 'data-toggle' => "tab"}Opposing Team
  .tab-content
    #player.tab-pane.fade.in.active
      %svg#player-viz.col-xs-12.col-md-8.col-md-offset-2
    #team.tab-pane.fade.in
      %svg#team-viz.col-xs-12.col-md-8.col-md-offset-2
    #opposing-team.tab-pane.fade.in
      %svg#opposing-team-viz.col-xs-12.col-md-8.col-md-offset-2
- content_for(:js) do
  :javascript
    $(document).on('turbolinks:load', function() {
      getPlayerShotChart();
    });
